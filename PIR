import RPi.GPIO as GPIO
import time

MOTION=20
GPIO.setmode(GPIO.BCM)
GPIO.setup(MOTION,GPIO.IN)

def detected():
	print('O')
	sys.quit
def no_detected():
	print('X')

try:
	while True:
		if GPIO.input(MOTION) == GPIO:
			detected()
		else:
			no_detected()

